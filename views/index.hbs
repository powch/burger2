<div class="row justify-content-center">
    <div class="col-sm-5 burger-container">
        <h2 class="text-center">Burgers!</h2>
        <hr>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burger_item devour=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-sm-5 offset-sm-2 burger-container">
        <h2 class="text-center">Burgers Eaten!</h2>
        <hr>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burger_item devour=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<div class="row mt-5">
    <h3>Create a Burger!</h3>
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="New Burger" aria-label="New Burger"
            aria-describedby="burgerSubmit" id="newBurger">
        <div class="input-group-append">
            <button class="btn btn-outline-warning" type="button" id="burgerSubmit">Submit</button>
        </div>
    </div>
</div>